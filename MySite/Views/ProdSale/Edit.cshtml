@model ProdSale
@{
    Layout = "_Landing";
    string strTitle = "Продажи";
    ViewBag.Title = strTitle;
}


<div class="inner">

    @{
        if (TempData["Message"] != null)
        {
            <span style="color:red">@TempData["Message"] </span>
        }
        // TempData.Keep("Message");
    }
    <br />

    <div>
        <h2>@strTitle</h2>
        <div>
            <form asp-controller="ProdSale" asp-action="Edit" method="post" enctype="multipart/form-data">

                <input type="hidden" asp-for="IdSale" />

                <div asp-validation-summary="All"></div>

                <div class="div-box">
                    <label asp-for="Product"></label>
                    <select asp-for="Product" class="form-control" asp-items="ViewBag.Product">Name</select>
                    <span asp-validation-for="Product"></span>
                </div>
                <div class="div-box">
                    <label asp-for="Amount"></label>
                    <textarea asp-for="Amount"></textarea>
                    <span asp-validation-for="Amount"></span>
                </div>
                <div class="div-box">
                    <label asp-for="Sum"></label>
                    <textarea asp-for="Sum"></textarea>
                    <span asp-validation-for="Sum"></span>
                </div>
                <div class="div-box">
                    <label asp-for="Date"></label>
                    <input asp-for="Date" style="color:black" />
                    <span asp-validation-for="Date"></span>
                </div>
                <div class="div-box">
                    <label asp-for="Employee"></label>
                    <select asp-for="Employee" class="form-control" asp-items="ViewBag.Employee">Name</select>
                    <span asp-validation-for="Employee"></span>
                </div>
                <br />

                <input type="submit" value="Сохранить" />
                <br />

            </form>
        </div>
    </div>

</div>






