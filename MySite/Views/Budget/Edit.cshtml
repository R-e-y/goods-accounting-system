@model Budget
@{
    Layout = "_Landing";
    string strTitle = "Бюджет";
    ViewBag.Title = strTitle;
}


<div class="inner">

    @{
        if (TempData["Message"] != null)
        {
            <span style="color:red">@TempData["Message"] </span>
        }
        // TempData.Keep("Message");
    }
    <div>
        <h2>@strTitle</h2>
        <div>
            <form asp-controller="Budget" asp-action="Edit" method="post" enctype="multipart/form-data">

                <input type="hidden" asp-for="IdBudget" />

                <div asp-validation-summary="All"></div>
                <div class="div-box">
                    <label asp-for="Sum"></label>
                    <input asp-for="Sum" />
                    <span asp-validation-for="Sum"></span>
                </div>
                <br />
                <input type="submit" value="Сохранить" />
            </form>
        </div>
    </div>

</div>






