@model Expense
@{
    Layout = "_Landing";
    string strTitle = "Затраты";
    ViewBag.Title = strTitle;
}


<div class="inner">

    @{
        if (TempData["Message"] != null)
        {
            <span style="color:red">@TempData["Message"] </span>
        }
        // TempData.Keep("Message");
    }
    <div>
        <h2>@strTitle</h2>
        <div>
            <form asp-controller="Expense" asp-action="Edit" method="post" enctype="multipart/form-data">

                <input type="hidden" asp-for="IdExp" />

                <div asp-validation-summary="All"></div>
                <div class="div-box">
                    <label asp-for="Name"></label>
                    <select name="Name" id="">                       
                        <option value="Налоги">Налоги</option>
                        <option value="Аренда">Аренда</option>                       
                    </select>
                    <span asp-validation-for="Name"></span>
                </div>

                <div class="div-box">
                    <label asp-for="Sum"></label>
                    <textarea asp-for="Sum"></textarea>
                    <span asp-validation-for="Sum"></span>
                </div>
                <div class="div-box">
                    <label asp-for="Date"></label>
                    <input asp-for="Date" style="color:black"/>
                    <span asp-validation-for="Date"></span>
                    
                </div>
                <div class="div-box">
                    <label asp-for="Employee"></label>
                    <select asp-for="Employee" class="form-control" asp-items="ViewBag.Employee">Name</select>
                    <span asp-validation-for="Employee"></span>
                </div>
                
                <br />

                <input type="submit" value="Сохранить" />
                <br />

            </form>
        </div>
    </div>

</div>






